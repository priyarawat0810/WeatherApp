<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    tools:context=".fragment.TodayWeatherFragment">
    
  <LinearLayout
      android:id="@+id/weather_panel"
      android:orientation="vertical"
      android:layout_marginTop="15dp"
      android:gravity="center"
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
          android:id="@+id/txt_city_name"
          android:textColor="@color/colorPrimary"
          android:textSize="24sp"
          android:textStyle="bold"
          android:textAlignment="center"
          android:text="Weather in London, GB"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

          <ImageView
              android:id="@+id/img_weather"
              android:src="@mipmap/ic_launcher"
              android:layout_width="80dp"
              android:layout_height="80dp"/>

          <TextView
              android:id="@+id/txt_temperature"
              android:textColor="@color/colorPrimary"
              android:textSize="50sp"
              android:textStyle="bold"
              android:text="14 C"
              android:layout_marginLeft="8dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

      </LinearLayout>

      <TextView
          android:id="@+id/txt_description"
          android:textColor="@color/colorPrimary"
          android:textSize="18sp"
          android:textStyle="bold"
          android:text="Weather in London, GB"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

      <TextView
          android:id="@+id/txt_date_time"
          android:textColor="@color/colorPrimary"
          android:textSize="24sp"
          android:textStyle="bold"
          android:text="Weather in London, GB"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

      <TableLayout
          android:background="@drawable/borders"
          android:layout_marginTop="10dp"
          android:stretchColumns="8"
          android:padding="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

          <TableRow
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="Pressure"/>

              <TextView
                  android:layout_marginLeft="8dp"
                  android:layout_column="1"
                  android:id="@+id/text_pressure"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="1013.75 hpa"/>
          </TableRow>

          <TableRow
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="Wind"/>

              <TextView
                  android:layout_marginLeft="8dp"
                  android:layout_column="1"
                  android:id="@+id/text_wind"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="Speed: 1 Deg: 1"/>
          </TableRow>

          <TableRow
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="Humidity"/>

              <TextView
                  android:layout_marginLeft="8dp"
                  android:layout_column="1"
                  android:id="@+id/text_humidity"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="100%"/>
          </TableRow>

          <TableRow
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="Sunrise"/>

              <TextView
                  android:layout_marginLeft="8dp"
                  android:layout_column="1"
                  android:id="@+id/text_sunrise"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="11:00"/>
          </TableRow>

          <TableRow
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="Sunset"/>

              <TextView
                  android:layout_marginLeft="8dp"
                  android:layout_column="1"
                  android:id="@+id/text_sunset"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="18:00"/>
          </TableRow>

          <TableRow
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="Geography coordinates"
                  android:paddingRight="10dp"/>

              <TextView
                  android:layout_marginLeft="8dp"
                  android:layout_column="1"
                  android:id="@+id/text_geo_coord"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="[32.0, -81.0]"/>
          </TableRow>
      </TableLayout>
  </LinearLayout>
    
    <ProgressBar
        android:id="@+id/loading"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>